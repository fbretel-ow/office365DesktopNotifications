{
  "manifest_version" : 2,
  "name" : "Microsoft Office 365 Desktop Notifications",
  "version" : "0.0.1",
  "description" : "Desktop Notifications for Office 365",
  "browser_action" : {
    "default_icon" : "icon.png",
    "default_popup" : "popup.html",
    "default_title" : "Get notified!"
  },
  "permissions" : [
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
